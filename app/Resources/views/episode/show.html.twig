{% extends "::layout.html.twig" %}

{% block body %}
    <div class="container">
        <a href="{{ path('app_tvseries_show', {'name': episode.tvseries.name}) }}" class="btn btn-lg btn-default" style="margin-bottom: 10px;">
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Revenir à la série
        </a>
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="media">
                        <div class="media-left">
                            <img class="media-object images_tvseries" src="{{ asset('uploads/' ~ episode.image) }}" alt="{{ episode.name }}">
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">
                                {{ episode.name }}
                            </h4>
                            <p>
                                <b>Episode n° :</b> {{ episode.episodeNumber }} - <b>Date de diffusion :</b> {{ episode.datePublished|date("d/m/Y") }}<br>
                            </p>
                            <p>
                                <b>Description :</b><br>
                                {{ episode.description }}
                            </p>
                        </div>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_episode_delete', {'id': episode.id}) }}" class="btn btn-danger pull-right"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        <a href="{{ path('app_episode_edit', {'id': episode.id}) }}" class="btn btn-warning pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}